@page
@model SeniorConnect.Pages.Activity.ActivityModel
@{
}

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null && Model.Users.Count > 0)
        {
            for (int i = 0; i < Model.Users.Count; i++)
            {
                var user = Model.Users[i];
                <tr>
                    <td>@user.userId</td>
                    <td>@user.email</td>
                    <td>@user.name</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Geen activiteiten gevonden</td>
            </tr>
        }
    </tbody>
</table>
